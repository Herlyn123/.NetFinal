@model IEnumerable<TallerFinal.Models.Proveedor> // trae los datos del models donde esta lo de la base de datos

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/proveedorstyle/index.css" rel="stylesheet" />
<h1>Listado de Proveedores</h1>
<div class="row">
    <div class="col-sm-6">
        <a class=" btn btn-success d-block" asp-action="Create" asp-controller="Proveedors" style=" width:100px; ">Agregar</a>
        <br />
    </div>
</div>

<div class="row">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td class="campos">Nombre</td>
                <td class="campos">Teléfono</td>
                <td class ="campos">Dirección</td>
                <td class="campos">Contacto</td>
                <td class="campos">Estado</td>
                <td class="campos">Acciones</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Direccion</td>
                    <td>@item.Contacto</td>
                    <td>@item.Estado</td>
                    <td>
                        <a asp-controller="Proveedors" asp-action="Edit" asp-route-id="@item.ProveedorId" class="btn btn-info">Editar</a>
                        <a asp-controller="Proveedors" asp-action="Delete" asp-route-id="@item.ProveedorId" class="btn btn-danger">ELiminar</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

